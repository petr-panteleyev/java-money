.gridPane {
    -fx-hgap: 5;
    -fx-vgap: 5;
}

.dialog-pane:header .header-panel .label {
    -fx-font-family: "Dialog";
    -fx-font-size: ${dialogLabelFontSize * 2};
    -fx-font-weight: bold;
}

.label {
    -fx-font-family: "Dialog";
    -fx-font-size: ${dialogLabelFontSize};
}

.aboutLabel {
    -fx-font-family: "Dialog";
    -fx-font-size: ${dialogLabelFontSize + 2};
    -fx-font-weight: bold;
}

.aboutIcon {
    -fx-fit-width: 48;
    -fx-fit-height: 48;
}
