<suite name="Money Manager Application Unit Tests">
    <test name="Dialogs">
        <classes>
            <class name="org.panteleyev.money.app.AccountDialogTest"/>
            <class name="org.panteleyev.money.app.CategoryDialogTest"/>
            <class name="org.panteleyev.money.app.ContactDialogTest"/>
            <class name="org.panteleyev.money.app.CurrencyDialogTest"/>
            <class name="org.panteleyev.money.app.TransactionDialogTest"/>
        </classes>
    </test>
    <test name="Cells">
        <classes>
            <class name="org.panteleyev.money.app.cells.AccountClosingDateCellTest"/>
        </classes>
    </test>
    <test name="Yandex Money">
        <classes>
            <class name="org.panteleyev.money.ymoney.TestAuthResponse"/>
            <class name="org.panteleyev.money.ymoney.TestClientId"/>
        </classes>
    </test>
    <test name="XML">
