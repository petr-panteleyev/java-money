    <test name="Model">
        <classes>
            <class name="org.panteleyev.money.model.TestAccount"/>
            <class name="org.panteleyev.money.model.TestCategory"/>
            <class name="org.panteleyev.money.model.TestContact"/>
            <class name="org.panteleyev.money.model.TestCurrency"/>
            <class name="org.panteleyev.money.model.TestTransaction"/>
