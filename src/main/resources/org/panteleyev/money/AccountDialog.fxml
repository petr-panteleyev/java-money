<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="%label.Name" />
      <Label text="%label.Type" GridPane.rowIndex="1" />
      <Label text="%label.Category" GridPane.rowIndex="2" />
      <Label text="%account.Dialog.InitialBalance" GridPane.rowIndex="3" />
      <Label text="%label.Comment" GridPane.rowIndex="4" />
      <Label text="%account.Dialog.Currency" GridPane.rowIndex="5" />
      <TextField fx:id="nameEdit" prefColumnCount="20" GridPane.columnIndex="1" />
      <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <ComboBox fx:id="currencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <TextField fx:id="initialEdit" prefColumnCount="20" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="commentEdit" prefColumnCount="10" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <CheckBox fx:id="activeCheckBox" mnemonicParsing="false" text="%account.Dialog.Active" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   </children>
</GridPane>
