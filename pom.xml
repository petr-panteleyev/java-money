<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.panteleyev</groupId>
    <artifactId>money-manager</artifactId>
    <version>1.1.0</version>
    <packaging>jar</packaging>

    <profiles>
        <profile>
            <id>fatjar</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                        <version>2.4.3</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>shade</goal>
                                </goals>
                                <configuration>
                                    <transformers>
                                        <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                            <manifestEntries>
                                                <Main-Class>${app.main.class}</Main-Class>
                                            </manifestEntries>
                                        </transformer>
                                    </transformers>
                                    <filters>
                                        <filter>
                                            <artifact>*:*</artifact>
                                            <excludes>
                                                <exclude>META-INF/*.SF</exclude>
                                                <exclude>META-INF/*.DSA</exclude>
                                                <exclude>META-INF/*.RSA</exclude>
                                            </excludes>
                                        </filter>
                                    </filters>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <name>MoneyManager</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <app.main.class>org.panteleyev.money.MoneyApplication</app.main.class>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>utilities</artifactId>
            <version>2.0.0</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>persistence</artifactId>
            <version>2.2.1</version>
        </dependency>
        <dependency>
            <groupId>org.controlsfx</groupId>
            <artifactId>controlsfx</artifactId>
            <version>8.40.12</version>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.9.6</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>templating-maven-plugin</artifactId>
                <version>1.0.0</version>
                <executions>
                    <execution>
                        <id>filtering-java-templates</id>
                        <goals>
                            <goal>filter-sources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.5.0</version>
                <executions>
                    <execution>
                        <id>dist-win</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>
                                ${env.JAVA_HOME}/bin/javapackager
                            </executable>
                            <arguments>
                                <argument>-deploy</argument>
                                <argument>-BjvmOptions=-XX:NewRatio=1</argument>
                                <argument>-native</argument>
                                <argument>exe</argument>
                                <argument>-name</argument>
                                <argument>${project.name}</argument>
                                <argument>-outdir</argument>
                                <argument>target/dists</argument>
                                <argument>-outfile</argument>
                                <argument>${project.name}</argument>
                                <argument>-srcfiles</argument>
                                <argument>target/${project.artifactId}-${project.version}.jar</argument>
                                <argument>-Bicon=icons.ico</argument>
                                <argument>-BappVersion=${project.version}</argument>
                                <argument>-BsystemWide=true</argument>
                                <argument>-Bcopyright=Copyright (c) 2010, 2017, Petr Panteleyev</argument>
                                <argument>-Bvendor=Petr Panteleyev</argument>
                                <argument>-Bwin.menuGroup=Petr Panteleyev</argument>
                                <argument>-appclass</argument>
                                <argument>${app.main.class}</argument>
                                <argument>-v</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>dist-mac</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>
                                ${env.JAVA_HOME}/bin/javapackager
                            </executable>
                            <arguments>
                                <argument>-deploy</argument>
                                <argument>-BjvmOptions=-XX:NewRatio=1</argument>
                                <argument>-native</argument>
                                <argument>dmg</argument>
                                <argument>-name</argument>
                                <argument>${project.name}</argument>
                                <argument>-outdir</argument>
                                <argument>target/dists</argument>
                                <argument>-outfile</argument>
                                <argument>${project.name}</argument>
                                <argument>-srcfiles</argument>
                                <argument>target/${project.artifactId}-${project.version}.jar</argument>
                                <argument>-Bicon=icons.icns</argument>
                                <argument>-BappVersion=${project.version}</argument>
                                <argument>-appclass</argument>
                                <argument>${app.main.class}</argument>
                                <argument>-v</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>dist-rpm</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>
                                ${env.JAVA_HOME}/bin/javapackager
                            </executable>
                            <arguments>
                                <argument>-deploy</argument>
                                <argument>-BjvmOptions=-XX:NewRatio=1</argument>
                                <argument>-native</argument>
                                <argument>rpm</argument>
                                <argument>-name</argument>
                                <argument>${project.name}</argument>
                                <argument>-outdir</argument>
                                <argument>target/dists</argument>
                                <argument>-outfile</argument>
                                <argument>Password Generator</argument>
                                <argument>-srcfiles</argument>
                                <argument>target/${project.artifactId}-${project.version}.jar</argument>
                                <argument>-Bicon=icon48.png</argument>
                                <argument>-BappVersion=${project.version}</argument>
                                <argument>-BsystemWide=true</argument>
                                <argument>-Bcopyright=Copyright (c) 2016, 2017, Petr Panteleyev</argument>
                                <argument>-Bvendor=Petr Panteleyev</argument>
                                <argument>-Bcategory=Utility</argument>
                                <argument>-Bemail=petr@panteleyev.org</argument>
                                <argument>-BlicenseType=BSD</argument>
                                <argument>-appclass</argument>
                                <argument>${app.main.class}</argument>
                                <argument>-v</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
